/**
 * @ngdoc controller
 * @name ItemIndexCtrl
 *
 * @description Logic for playlist item stuffs
 */
(function() {
  "use strict";

var ItemIndexCtrl = function(
  $scope, $http, $routeParams,
  PlaylistApp, Notice
  ) {

  /**
   * Setup
   */

  /**
   * Watch variables
   */

  /**
   * Scope methods
   */

  // Table pagination setup
  $scope.init = {
    'count': 50,
    'page': 1,
    'filterBase': 1
  };

  $scope.filterBy = {
    'title': '',
  }

  $scope.theme = {
    listItemsPerPage: [5, 10, 20, 50],
    loadOnInit: true
  };

  $scope.getResource = function (params, paramsObj) {
    params = {
      per_page: paramsObj.count,
      page: paramsObj.page,
      'q[playlist_id_eq]': $routeParams.playlist_id,
      'q[api_title_cont]': paramsObj.filters.title
    };

    var urlApi = 'playlist_items.json?' + $.param(params);
    return $http.get(urlApi).then(function (response) {
      return {
        'rows': response.data.data,
        'header': [],
        'pagination': {
          'count': response.data.per_page,
          'page': response.data.page,
          'pages': response.data.total_pages,
          'size': response.data.total
        },
      }
    });
  }
};

ItemIndexCtrl.$inject = [
  '$scope', '$http', '$routeParams',
  'PlaylistApp', 'Notice'
];

angular.module("PlaylistApp")
       .controller('ItemIndexCtrl', ItemIndexCtrl);
}());
