/**
 * @ngdoc controller
 * @name ItemIndexCtrl
 *
 * @description Logic for playlist item stuffs
 */
(function() {
  "use strict";

var ItemIndexCtrl = function(
  $scope, $http, $routeParams,
  PlaylistApp, Playlist, Notice
  ) {

  /**
   * Setup
   */
  $scope.playlist_id = $routeParams.playlist_id;

  /**
   * Watch variables
   */

  /**
   * Scope methods
   */

  // Table pagination setup
  $scope.init = {
    'count': 50,
    'page': 1,
    'filterBase': 1
  };

  $scope.filterBy = {
    'title': '',
  }

  $scope.theme = {
    listItemsPerPage: [5, 10, 20, 50],
    loadOnInit: true
  };

  $scope.getResource = function (params, paramsObj) {
    params = {
      per_page: paramsObj.count,
      page: paramsObj.page,
      'q[playlist_id_eq]': $routeParams.playlist_id,
      'q[api_title_cont]': paramsObj.filters.title
    };

    var urlApi = 'playlist_items.json?' + $.param(params);
    return $http.get(urlApi).then(function (response) {
      $scope.importing = false;
      return {
        'rows': response.data.data,
        'header': [],
        'pagination': {
          'count': response.data.per_page,
          'page': response.data.page,
          'pages': response.data.total_pages,
          'size': response.data.total
        },
      }
    }).catch(function() {
      Notice.handleErrors;
      $scope.importing = false;
    });
  };

  $scope.reloadCallback = function() {};

  $scope.reload = function() {
    $scope.reloadCallback();
  };

  $scope.refreshVideos = function() {
    if($scope.importing) {
      return false;
    }
    var list = Playlist.build({ id: $scope.playlist_id })
    $scope.importing = true;
    list.importPlaylists().then(function(response) {
      Notice.setSuccesses(['Successfully Refreshed Videos']);
      $scope.reloadCallback();
    }).catch(function() {
      Notice.handleErrors;
    });
  };
};

ItemIndexCtrl.$inject = [
  '$scope', '$http', '$routeParams',
  'PlaylistApp', 'Playlist', 'Notice'
];

angular.module("PlaylistApp")
       .controller('ItemIndexCtrl', ItemIndexCtrl);
}());
