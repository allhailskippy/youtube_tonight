/**
 * @ngdoc overview
 * @name Playlist App
 *
 * @description The PlaylistApp is used for viewing playlists
 * This file is where the routes are defined for this app
 */
(function(){
'use strict';

var routesConfig = function($locationProvider, $routeProvider) {
  $routeProvider.
  when('/:user_id/index', {
    controller: 'IndexCtrl',
    templateUrl: '<%= asset_path("apps/playlists/templates/index.html") %>',
    resolve: {
      user_data: function($route, User) {
        var user_id = $route.current.params.user_id;
        return User.find(user_id);
      }
    }
  });
  $locationProvider
    .html5Mode(false)
    .hashPrefix('');
};
routesConfig.$inject = ['$locationProvider', '$routeProvider'];

angular.module('PlaylistApp', ['shared', 'ngRoute', 'ngResource', 'ng-rails-csrf', 'ngTasty', 'tableSort', 'ui.sortable'])
       .config(routesConfig);
})();
