/**
 * @ngdoc directive
 * @name VideoShow
 * @module VideoApp
 *
 * @description
 * This directive displays the video
 *
 * ### Usage
 * <video-show video="video"></video-show>
 */
(function() {
'use strict';

var controller = function(
  $scope,
  Video
) {
  /**
   * Setup
   */
  $scope.currentVideo = null;

  /**
   * Scope Methods
   */
  $scope.togglePreview = function(video) {
    $scope.currentVideo = video;
  };
};

controller.$inject = [
  '$scope',
  'Video'
];

var VideoShow = function() {
  return {
    restrict: 'E',
    scope: {
      video: '='
    },
    controller: controller,
    templateUrl: '<%= asset_path("apps/videos/templates/video_show.html") %>'
  };
};

angular.module('VideoApp')
       .directive('videoShow', VideoShow);
}());

