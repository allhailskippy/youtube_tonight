/**
 * @ngdoc overview
 * @name Video App
 *
 * @description The VideoApp is used for viewing videos.
 * This file is where the routes are defined for this app
 */
(function(){
'use strict';

var routesConfig = function($locationProvider, $routeProvider) {
  $routeProvider.
  when('/shows/:show_id', {
    controller: 'IndexCtrl',
    templateUrl: '<%= asset_path("apps/videos/templates/index.html") %>'
  }).
  when('/playlists/:playlist_id', {
    controller: 'PlaylistIndexCtrl',
    templateUrl: '<%= asset_path("apps/videos/templates/playlist_index.html") %>'
  }).
  otherwise({
    redirectTo: '/index'
  });
  $locationProvider
    .html5Mode(false)
    .hashPrefix('');
};
routesConfig.$inject = ['$locationProvider', '$routeProvider'];

angular.module('VideoApp', ['shared', 'ngRoute', 'ngResource', 'ng-rails-csrf', 'ui.sortable', 'ui.bootstrap-slider', 'ngTasty'])
       .config(routesConfig);
})();
