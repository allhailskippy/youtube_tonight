/**
 * @ngdoc controller
 * @name IndexCtrl
 *
 * @description Controller for the video player
 */
(function() {
  "use strict";

var IndexCtrl = function(
  $scope,
  Show,
  show_data
  ) {
  /**
   * Setup
   */
  $scope.show = Show.build(show_data.data);
  $scope.showId = $scope.show.id;
  $scope.broadcastId = 'broadcast-' + $scope.show.id;
  $scope.playerId = $scope.broadcastId + '-' + Math.floor(Math.random() * 1000000);
};

IndexCtrl.$inject = [
  '$scope',
  'Show',
  'show_data'
];

angular.module("BroadcastsApp")
       .controller('IndexCtrl', IndexCtrl);
}());
