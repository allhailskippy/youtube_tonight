//= require_self
//= require_tree ./controllers
/**
 * @ngdoc overview
 * @name Show App
 *
 * @description Used for viewing shows.
 * This file is where the routes are defined for this app
 */
(function(){
'use strict';

var routesConfig = function($routeProvider) {
  $routeProvider.
  when('/shows', {
    controller: 'ShowsIndexCtrl',
    templateUrl: '<%= asset_path("apps/shows/templates/index.html") %>',
    permission: 'show.index',
    menu: 'shows'
  }).
  when('/shows/new', {
    controller: 'ShowsFormCtrl',
    templateUrl: '<%= asset_path("apps/shows/templates/form.html") %>',
    permission: 'show.create',
    menu: 'shows'
  }).
  when('/shows/:show_id/edit', {
    controller: 'ShowsFormCtrl',
    templateUrl: '<%= asset_path("apps/shows/templates/form.html") %>',
    permission: 'show.update',
    menu: 'shows'
  });
};
routesConfig.$inject = ['$routeProvider'];

angular.module('YTBroadcastApp')
       .config(routesConfig);
})();
