/**
 * @ngdoc overview
 * @name Show App
 *
 * @description The ShowApp is used for viewing shows.
 * This file is where the routes are defined for this app
 */
(function(){
'use strict';

var routesConfig = function($locationProvider, $routeProvider) {
  $routeProvider.
  when('/index', {
    controller: 'IndexCtrl',
    templateUrl: '<%= asset_path("apps/shows/templates/index.html") %>',
  }).
  when('/new', {
    controller: 'FormCtrl',
    templateUrl: '<%= asset_path("apps/shows/templates/form.html") %>',
  }).
  when('/:show_id/edit', {
    controller: 'FormCtrl',
    templateUrl: '<%= asset_path("apps/shows/templates/form.html") %>',
  }).
  otherwise({
    redirectTo: '/index'
  });
};
routesConfig.$inject = ['$locationProvider', '$routeProvider'];

angular.module('ShowApp', ['shared', 'ngRoute', 'ngResource', 'ng-rails-csrf', 'tableSort'])
       .config(routesConfig);
})();
