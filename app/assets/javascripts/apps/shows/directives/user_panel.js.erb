/**
 * @ngdoc directive
 * @name UserPanel
 * @module UserApp
 *
 * @description
 * This directive displays a user panel
 *
 * ### Usage
 * <user-panel video="video"></user-panel>
 */
(function() {
'use strict';

var controller = function(
  $scope,
  User
) {
};

controller.$inject = [
  '$scope',
  'User'
];

var UserPanel = function() {
  return {
    restrict: 'E',
    scope: {
      user: '='
    },
    controller: controller,
    templateUrl: '<%= asset_path("apps/shows/templates/user_panel.html") %>'
  };
};

angular.module('ShowApp')
       .directive('userPanel', UserPanel);
}());

