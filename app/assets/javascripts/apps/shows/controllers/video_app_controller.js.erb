/**
 * @ngdoc controller
 * @name ShowAppCtrl
 *
 * @description Controller for the entire ShowApp
 */
(function() {
  "use strict";

var ShowAppCtrl = function(
  $scope,
  ShowApp, Show
  ) {

  //$scope.page = 1;
  //$scope.perPage = 30;
  //$scope.endOfStream = false;
  $scope.retrieving = true;
  //$scope.showTotal = 0;
  //$scope.totalPages = 0;
  $scope.shows = [];

  $scope.queryShows = function() {
    var params = {
//      'page': $scope.page,
//      'per_page': $scope.perPage,
    };

    Show.query(params).then(function(response) {
      angular.forEach(response.data, function(show) {
        $scope.shows.push(Show.build(show));
      });
//      $scope.showTotal = response.total;
//      $scope.totalPages = response.total_pages;
      $scope.retrieving = false;
    });
  };

  $scope.queryShows();
};

ShowAppCtrl.$inject = [
  '$scope',
  'ShowApp', 'Show'
];

angular.module("ShowApp")
       .controller('ShowAppCtrl', ShowAppCtrl);
}());
