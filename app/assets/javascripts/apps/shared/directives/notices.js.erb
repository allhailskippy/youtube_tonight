/**
 * @ngdoc directive
 * @name notices
 * @module shared
 *
 * @description
 * This directive displays notices, warnings, alerts and errors.
 *
 * ### Usage
 * <notices notices="notices"></notices>
 */
(function() {
'use strict';

var controller = function(
  $scope,
  Notice
) {
  /**
   * Setup
   */
  $scope.notices = Notice.defaults();

  /**
   * Watched variables
   */
  $scope.$watch(function() {
    return Notice.notices
  }, function(newVal) {
    $scope.notices = newVal;
  });
};

controller.$inject = [
  '$scope',
  'Notice'
];

var Notices = function() {
  return {
    restrict: 'E',
    replace: true,
    scope: {
    },
    controller: controller,
    templateUrl: '<%= asset_path("apps/shared/templates/notices.html") %>'
  };
};

angular.module('shared')
       .directive('notices', Notices);
}());
